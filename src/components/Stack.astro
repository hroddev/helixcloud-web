---
const categories = [
    {
        name: "DevOps & Automation",
        tools: ["Terraform", "Bicep", "Ansible", "PowerShell", "Python"],
    },
    {
        name: "Cloud Platforms",
        tools: ["Microsoft Azure", "AWS", "Office 365", "Entra ID"],
    },
    {
        name: "Containerization & Virtualization",
        tools: ["Docker", "Kubernetes", "VMware", "Hyper-V", "KVM"],
    },
    {
        name: "Monitoring & Observability",
        tools: ["Grafana", "Prometheus", "Zabbix", "PRTG", "Dynatrace"],
    },
];
---

<section id="stack" class="py-24 bg-black relative">
    <div class="container mx-auto px-6 md:px-12">
        <div class="text-center mb-16">
            <h2 class="text-3xl md:text-5xl font-bold mb-4 text-white">
                Technical <span class="text-blue-500">Stack</span>
            </h2>
            <p class="text-gray-400 max-w-2xl mx-auto">
                The enterprise-grade tools I use to build, secure, and scale
                modern infrastructure.
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
            {
                categories.map((category) => (
                    <div class="p-8 rounded-2xl bg-[#050505] border border-white/5 hover:border-blue-500/20 transition-all group">
                        <h3 class="text-lg font-bold mb-6 text-white border-b border-white/10 pb-4">
                            {category.name}
                        </h3>
                        <ul class="space-y-4">
                            {category.tools.map((tool) => (
                                <li class="flex items-center gap-3 text-gray-400 group-hover:text-gray-300">
                                    <span class="w-1.5 h-1.5 rounded-full bg-blue-500" />
                                    {tool}
                                </li>
                            ))}
                        </ul>
                    </div>
                ))
            }
        </div>

        <!-- Bottom logo-style bar for key tech -->
        <div
            class="mt-20 pt-10 border-t border-white/5 flex flex-wrap justify-center gap-12 opacity-50 grayscale hover:grayscale-0 transition-all duration-700"
        >
            <span class="text-white font-bold tracking-tighter text-2xl"
                >AZURE</span
            >
            <span class="text-white font-bold tracking-tighter text-2xl"
                >AWS</span
            >
            <span class="text-white font-bold tracking-tighter text-2xl"
                >TERRAFORM</span
            >
            <span class="text-white font-bold tracking-tighter text-2xl"
                >KUBERNETES</span
            >
            <span class="text-white font-bold tracking-tighter text-2xl"
                >VMWARE</span
            >
        </div>
    </div>
</section>
