---
import { siteData } from "../siteData";
const currentYear = new Date().getFullYear();
---

<footer class="bg-gray-950 border-t border-white/5 py-4 md:py-12">
    <div class="container mx-auto px-6 md:px-12">
        <div
            class="flex flex-col md:flex-row justify-between items-center gap-6"
        >
            <div
                class="flex flex-col items-center md:items-start w-full md:w-auto"
            >
                <a href="/" class="group transition-all duration-300">
                    <img
                        src="/helix-cloud-logo.webp"
                        class="h-12 md:h-14 grayscale opacity-50 group-hover:grayscale-0 group-hover:opacity-100 transition-all duration-500"
                        alt="Helix Cloud Logo"
                    />
                </a>
            </div>

            <div
                class="flex flex-col items-center md:items-end text-sm text-gray-500 w-full md:w-auto text-center md:text-right"
            >
                <p>
                    &copy; {currentYear}
                    {siteData.authorName}. All Rights Reserved.
                </p>
                <p class="mt-1">
                    {siteData.authorRole}
                </p>
            </div>
        </div>
    </div>
</footer>
